import java.util.* ;
import java.io.*; 
public class Solution 
{
    public static int swapAdjacent(int n) 
    {
        /*
        - i just converted number to Binary using .toBinaryString(n).
        - used a loop to swap the right ones.
        - returned it by converting it to number using Integer.parseInt(binStr, 2);
        
        */

        String binaryString = Integer.toBinaryString(n);
        StringBuilder binaryNum = new StringBuilder(binaryString).reverse();

        for(int i=0; i<binaryNum.length()-1; i++) {
            if((i & 1) == 0) {
                char temp = binaryNum.charAt(i);
                binaryNum.setCharAt(i, binaryNum.charAt(i+1));
                binaryNum.setCharAt(i+1, temp);
            }
        }

        binaryNum.reverse();
        
        return Integer.parseInt(binaryNum.toString(), 2);
        
    }
}
